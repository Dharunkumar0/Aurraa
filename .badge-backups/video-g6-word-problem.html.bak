      gsap.set(["#ex1","#calc1","#ex2","#calc2","#tick1","#tick2"], {opacity:0,scale:1});
      replayBtn.style.display="none";
      paused=false; pauseBtn.textContent="‚è∏ Pause";
      currentLang=langSelect.value;
