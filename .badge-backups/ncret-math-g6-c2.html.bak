    <script>
        // Topic expand/collapse â€” ignore buttons that are not inside a .topic-wrapper
        document.querySelectorAll('.topic-btn').forEach(button => {
            button.addEventListener('click', () => {
                const wrapper = button.closest('.topic-wrapper');
                if (!wrapper) return; // guard: some buttons (like Start Game) live outside wrappers
                const content = wrapper.querySelector('.topic-content');

                // Remove active class from all wrappers
                document.querySelectorAll('.topic-wrapper').forEach(w => {
                    if (w !== wrapper) {
                        w.classList.remove('active');
                    }
                });

                // Toggle active class on clicked wrapper
                wrapper.classList.toggle('active');
            });
        });

        // Start-game buttons: navigate to the URL in data-target (supports modifier keys)
        document.addEventListener('click', function (e) {
            const btn = e.target.closest && e.target.closest('.start-game');
            if (!btn) return;
            const target = btn.getAttribute('data-target') || btn.dataset.target;
            if (!target) return;
            if (e.ctrlKey || e.metaKey || e.shiftKey) {
                window.open(target, '_blank');
            } else {
                window.location.href = target;
            }
        }, { passive: true });
    </script>
