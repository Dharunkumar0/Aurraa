    const voicesMap = { en:"en-IN", hi:"hi-IN", ta:"ta-IN", te:"te-IN", or:"or-IN" };

    function speak(text,lang){
      window.speechSynthesis.cancel();
      const utterance = new SpeechSynthesisUtterance(text);
      utterance.lang = voicesMap[lang] || "en-IN";
      utterance.rate = 0.85;
      window.speechSynthesis.speak(utterance);
    }

    const steps = [
      { anim: () => gsap.to("#ex1",{opacity:1,duration:1}) },
      { anim: () => gsap.to("#calc1",{opacity:1,duration:1}) },
      { anim: () => gsap.to("#tick1",{opacity:1,scale:1.2,duration:0.6,yoyo:true,repeat:1}) },
      { anim: () => gsap.to("#ex2",{opacity:1,duration:1}) },
      { anim: () => gsap.to("#calc2",{opacity:1,duration:1}) },
      { anim: () => gsap.to("#tick2",{opacity:1,scale:1.2,duration:0.6,yoyo:true,repeat:1}) },
      { anim: () => {} },
      { anim: () => replayBtn.style.display="inline-block" }
    ];

    function runStep(i){
      if(i>=captions[currentLang].length) return;
      step=i;
      caption.textContent=captions[currentLang][i];
      speak(captions[currentLang][i],currentLang);
      steps[i].anim();
      if(!paused) setTimeout(()=>runStep(i+1),6000);
    }

