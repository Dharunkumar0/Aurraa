<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign In - AURRAA</title>
    <link rel="stylesheet" href="signin-styles.css">
    <link href="https://fonts.googleapis.com/css2?family=Fredoka+One:wght@400&family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <!-- Floating Background Icons -->
    <div class="floating-icons">
        <div class="floating-icon book-icon">üìö</div>
        <div class="floating-icon pencil-icon">‚úèÔ∏è</div>
        <div class="floating-icon star-icon">‚≠ê</div>
        <div class="floating-icon rocket-icon">üöÄ</div>
        <div class="floating-icon brain-icon">üß†</div>
        <div class="floating-icon trophy-icon">üèÜ</div>
        <div class="floating-icon lightbulb-icon">üí°</div>
        <div class="floating-icon apple-icon">üçé</div>
        <div class="floating-icon calculator-icon">üßÆ</div>
        <div class="floating-icon globe-icon">üåç</div>
    </div>

    <!-- Main Container -->
    <div class="signin-container">
        <!-- Header -->
        <header class="signin-header">
            <div class="logo">
                <h1>AURRAA</h1>
            </div>
        </header>

        <!-- Login Form Section -->
        <main class="signin-main" id="loginSection">
            <div class="login-card">
                <div class="card-header">
                    <h2>Welcome Back!</h2>
                    <p>Sign in to continue your learning journey</p>
                </div>

                <form class="login-form" id="loginForm">
                    <div class="form-group">
                        <label for="username">Username</label>
                        <div class="input-container">
                            <span class="input-icon">üë§</span>
                            <input 
                                type="text" 
                                id="username" 
                                name="username" 
                                placeholder="Enter your username"
                                required
                            >
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="password">Password</label>
                        <div class="input-container">
                            <span class="input-icon">üîí</span>
                            <input 
                                type="password" 
                                id="password" 
                                name="password" 
                                placeholder="Enter your password"
                                required
                            >
                        </div>
                    </div>

                    <div class="form-options">
                        <label class="remember-me">
                            <input type="checkbox" name="remember">
                            <span class="checkmark"></span>
                            Remember me
                        </label>
                        <a href="#" class="forgot-password">Forgot Password?</a>
                    </div>

                    <button type="submit" class="login-btn">
                        <span>Login</span>
                        <div class="btn-shine"></div>
                    </button>
                </form>

                <div class="signup-link">
                    <p>Don't have an account? <a href="#" class="signup-text">Sign Up</a></p>
                </div>

                <div class="divider">
                    <span>or</span>
                </div>

                <div class="social-login">
                    <button class="social-btn google-btn">
                        <span class="social-icon">üîç</span>
                        Continue with Google
                    </button>
                    <button class="social-btn apple-btn">
                        <span class="social-icon">üçé</span>
                        Continue with Apple
                    </button>
                </div>
            </div>
        </main>

        <!-- Syllabus Selection Section (Hidden initially) -->
        <main class="syllabus-main" id="syllabusSection" style="display: none;">
            <div class="syllabus-card">
                <div class="syllabus-header">
                    <h2>Select Your Syllabus</h2>
                    <p>Choose the curriculum that matches your learning path</p>
                </div>

                <div class="syllabus-options">
                    <button class="syllabus-btn ncert-btn" data-syllabus="ncert">
                        <a href="ncret-grade.html"
                        <div class="syllabus-icon">üìñ</div>
                        <h3>NCERT</h3>
                        <p>National Council of Educational Research and Training</p>
                        <div class="btn-glow"></div>
                        </a>
                        </button>
                    </button>

                    <button class="syllabus-btn scert-btn" data-syllabus="scert">
                        <a href="scert-grade.html">
                        <div class="syllabus-icon">üìú</div>
                        
                        <h3>SCERT</h3>
                        <p>State Council of Educational Research and Training</p>
                        
                        <div class="btn-glow"></div>
                        </a>
                    </button>
                </div>

                <div class="back-to-login">
                    <button class="back-btn" id="backToLogin">
                        <span class="back-icon">‚Üê</span>
                        Back to Login
                    </button>
                </div>
            </div>
        </main>

        <!-- Footer -->
        <footer class="signin-footer">
            <p>&copy; 2024 AURRAA. Making learning fun and engaging!</p>
        </footer>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const loginForm = document.getElementById('loginForm');
            const loginSection = document.getElementById('loginSection');
            const syllabusSection = document.getElementById('syllabusSection');
            const backToLoginBtn = document.getElementById('backToLogin');
            const inputs = document.querySelectorAll('input');
            const loginBtn = document.querySelector('.login-btn');
            const syllabusBtns = document.querySelectorAll('.syllabus-btn');
            
            // Add focus effects to inputs
            inputs.forEach(input => {
                input.addEventListener('focus', function() {
                    this.parentElement.classList.add('focused');
                });
                
                input.addEventListener('blur', function() {
                    if (!this.value) {
                        this.parentElement.classList.remove('focused');
                    }
                });
            });
            
            // Handle login form submission
            loginForm.addEventListener('submit', function(e) {
                e.preventDefault();
                
                const username = document.getElementById('username').value;
                const password = document.getElementById('password').value;
                
                // Simple validation (in real app, this would be server-side)
                if (username && password) {
                    // Show loading state
                    loginBtn.innerHTML = '<span>Logging in...</span>';
                    loginBtn.disabled = true;
                    
                    // Simulate login process
                    setTimeout(() => {
                        // Hide login section and show syllabus selection
                        loginSection.style.display = 'none';
                        syllabusSection.style.display = 'block';
                        
                        // Reset login button
                        loginBtn.innerHTML = '<span>Login</span><div class="btn-shine"></div>';
                        loginBtn.disabled = false;
                        
                        // Add entrance animation to syllabus section
                        syllabusSection.style.opacity = '0';
                        syllabusSection.style.transform = 'translateY(30px)';
                        setTimeout(() => {
                            syllabusSection.style.transition = 'all 0.6s ease';
                            syllabusSection.style.opacity = '1';
                            syllabusSection.style.transform = 'translateY(0)';
                        }, 100);
                    }, 1500);
                } else {
                    // Show error message
                    alert('Please fill in all fields');
                }
            });
            
            // Handle back to login button
            backToLoginBtn.addEventListener('click', function() {
                syllabusSection.style.display = 'none';
                loginSection.style.display = 'block';
                
                // Add entrance animation to login section
                loginSection.style.opacity = '0';
                loginSection.style.transform = 'translateY(30px)';
                setTimeout(() => {
                    loginSection.style.transition = 'all 0.6s ease';
                    loginSection.style.opacity = '1';
                    loginSection.style.transform = 'translateY(0)';
                }, 100);
            });
            
            // Handle syllabus selection
            syllabusBtns.forEach(btn => {
                btn.addEventListener('click', function() {
                    const syllabus = this.dataset.syllabus;
                    
                    // Add selection animation
                    this.style.transform = 'scale(0.95)';
                    setTimeout(() => {
                        this.style.transform = 'scale(1)';
                    }, 150);
                    
                    // Show selection feedback
                    this.classList.add('selected');
                    setTimeout(() => {
                        alert(`You selected ${syllabus.toUpperCase()} syllabus! Redirecting to dashboard...`);
                        // In real app, redirect to dashboard or next page
                        // window.location.href = 'dashboard.html';
                    }, 300);
                });
            });
            
            // Add click effect to login button
            loginBtn.addEventListener('click', function(e) {
                if (!this.disabled) {
                    this.classList.add('clicked');
                    setTimeout(() => {
                        this.classList.remove('clicked');
                    }, 200);
                }
            });
        });
    </script>
</body>
</html>
